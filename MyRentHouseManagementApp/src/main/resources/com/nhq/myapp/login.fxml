<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" styleClass="Main" stylesheets="@css/login.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.nhq.myapp.LoginController">
    <children>
      <Label stylesheets="@css/login.css" text="Rent House Management App" textAlignment="CENTER">
         <styleClass>
            <String fx:value="mylabel" />
            <String fx:value="Header" />
         </styleClass></Label>
      <HBox prefWidth="100.0" styleClass="TextFieldGroup" stylesheets="@css/login.css">
         <children>
            <Label prefWidth="80.0" styleClass="TextLabel" stylesheets="@css/login.css" text="Username: " />
            <TextField fx:id="usernameText" prefWidth="180.0" promptText="fill your username" stylesheets="@css/login.css" />
         </children>
      </HBox>
      <HBox styleClass="TextFieldGroup" stylesheets="@css/login.css">
         <children>
            <Label prefWidth="80.0" styleClass="TextLabel" stylesheets="@css/login.css" text="Password: " />
            <TextField fx:id="passwordText" prefWidth="180.0" promptText="fill your password" stylesheets="@css/login.css" />
         </children>
      </HBox>
      <HBox styleClass="ButtonGroup" stylesheets="@css/login.css">
         <children>
            <Button mnemonicParsing="false" prefWidth="80.0" styleClass="Button" stylesheets="@css/login.css" text="Register" textAlignment="CENTER" />
            <Button mnemonicParsing="false" prefWidth="80.0" styleClass="Button" stylesheets="@css/login.css" text="Login" textAlignment="CENTER" />
            <Button mnemonicParsing="false" onAction="#handleClose" prefWidth="80.0" styleClass="Button" stylesheets="@css/login.css" text="Close" textAlignment="CENTER" />
         </children>
      </HBox>
   </children>
</VBox>
